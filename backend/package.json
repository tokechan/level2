{
  "name": "@simple-crud/backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "generate:api": "openapi-generator-cli generate -i openapi.yaml -g typescript-fetch -o ../frontend/src/api --additional-properties=typescriptThreePlus=true",
    "generate:types": "openapi-generator-cli generate -i openapi.yaml -g typescript-node -o ./src/types/generated",
    "validate:api": "openapi-generator-cli validate -i openapi.yaml"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
